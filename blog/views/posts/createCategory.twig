{% extends 'layout.twig' %}

{% block body %}
  <div class="container-fluid text-center p-3" style="background-color: rgb(19, 54, 78);">
    <h1 class="m-0">{{ title }}</h1>
  </div>
  <div class="container d-flex justify-content-center mt-auto p-3">
    <div class="card bg-dark w-75 mb-3 p-3">
      <div class="card-body">
        <form method="POST">
          <div class="mb-3">
            <label for="name">Nombre:</label><br />
            <input class="form-control" id="name" name="name" type="text" />
          </div>
          <div class="text-center">
            <input class="btn btn-primary" type="submit" value="Crear" />
            <a class="btn btn-secondary" href="/posts/manage" role="button">Cancelar</a>
          </div>
        </form>
      </div>
    </div>
  </div>
{% endblock %}
